import pygtk
pygtk.require('2.0')
import gtk

class stub(gtk.Table):
  
  def __init__(self):
    gtk.Table.__init__(self, 2, 2, True)
    
    l1 = gtk.Label("l1")
    l2 = gtk.Label("l2")
    l3 = gtk.Label("l3")
    l4 = gtk.Label("l4")
    self.attach(l1, 0,1,0,1)
    self.attach(l2, 1,2,0,1)
    self.attach(l3, 0,1,1,2)
    self.attach(l4, 1,2,1,2)
    self.show_all()
    

class torrents_selctor():
  
  def __init__(self):
    self.window = gtk.Dialog()
    self.window.set_size_request(600,400)
    self.window.set_title("Kickass Downloader")
    self.window .set_border_width(0)
    self.window.connect("destroy", gtk.main_quit)
    
    
    self.scrolledWindow= gtk.ScrolledWindow()
    self.scrolledWindow.set_border_width(10)
    self.scrolledWindow.set_policy(gtk.POLICY_AUTOMATIC, gtk.POLICY_ALWAYS)
    
    self.window.vbox.pack_start(self.scrolledWindow, True, True, 0)
    
    self.tables = gtk.HBox()
    self.scrolledWindow.add_with_viewport(self.tables)
    
    for i in range(10):
      ti = stub()
      tables.pack_start(ti)
    
    self.tables.show()
    self.scrolledWindow.show()
    self.window.show_all()
    
    
def main():
  torrents_selctor()